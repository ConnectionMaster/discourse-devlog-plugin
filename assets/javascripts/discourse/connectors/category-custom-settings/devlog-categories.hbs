{{#if siteSettings.devlog_categories_enabled}}
  <section class='field'>
    <div class="devlog-categories">
      <label class="checkbox-label">
        {{input type="checkbox" checked=category.custom_fields.devlog_enabled}}
        {{i18n 'devlog_categories.devlog_enabled'}}
      </label>
    </div>
  </section>
{{/if}}

{{#unless siteSettings.devlog_categories_enabled}}
  <section class='field'>
    {{i18n 'devlog_categories.devlog_disabled'}}
    <a href="/admin/site_settings/category/plugins">{{i18n 'devlog_categories.devlog_disabled_click'}}</a>
  </section>
{{/unless}}
